<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivityLogin">


    <TextView
        android:id="@+id/TextRejestracja1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="PROCES REJESTRACJI PRZEBIEGŁ POMYŚLNIE"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextRejestracja2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OSTATNIM ETAPEM JEST ZAŁOŻENIE KONTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextRejestracja1" />

    <TextView
        android:id="@+id/nickText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="63dp"
        android:text="NICK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TextRejestracja2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nickInputRejestracja"
        android:layout_width="183dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:hint="Nick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toEndOf="@+id/nickText"
        app:layout_constraintTop_toTopOf="@+id/TextRejestracja2" />

    <TextView
        android:id="@+id/TextHasloRejestracja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:text="HASŁO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickText" />

    <EditText
        android:id="@+id/hasloInputRejestracja"
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Hasło"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextHasloRejestracja"
        app:layout_constraintTop_toTopOf="@+id/nickInputRejestracja" />

    <TextView
        android:id="@+id/TextRejestarcja3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text=" PODAJ PREFEROWANE GODZINY  WYKONYWANIA POMIARÓW"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hasloInputRejestracja" />

    <TextView
        android:id="@+id/TextRejestracja4"
        android:layout_width="43dp"
        android:layout_height="33dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="64dp"
        android:text="RANO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TextRejestarcja3" />

    <TextView
        android:id="@+id/TextRejetsracja5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:text="POŁUDNIE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TextRejestracja4" />

    <TextView
        android:id="@+id/TextRejestracja6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="WIECZÓR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextRejetsracja5" />

    <EditText
        android:id="@+id/ranoRejestracjaInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toEndOf="@+id/TextRejestracja4"
        app:layout_constraintTop_toTopOf="@+id/TextRejestarcja3" />

    <EditText
        android:id="@+id/PoludnieRejestracja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toEndOf="@+id/TextRejetsracja5"
        app:layout_constraintTop_toBottomOf="@+id/ranoRejestracjaInput" />

    <EditText
        android:id="@+id/WieczorRejestracja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toEndOf="@+id/TextRejestracja6"
        app:layout_constraintTop_toBottomOf="@+id/PoludnieRejestracja" />

    <Button
        android:id="@+id/zalozKontoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:backgroundTint="#EA8484"
        android:text="ZAŁÓŻ KONTO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/WieczorRejestracja"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>